<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                             http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <display-name>Hotel Reservation WebApp</display-name>

    <servlet>
        <servlet-name>AddReservationServlet</servlet-name>
        <servlet-class>servlet.AddReservationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddReservationServlet</servlet-name>
        <url-pattern>/AddReservationServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteReservationServlet</servlet-name>
        <servlet-class>servlet.DeleteReservationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteReservationServlet</servlet-name>
        <url-pattern>/DeleteReservationServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdateReservationServlet</servlet-name>
        <servlet-class>servlet.UpdateReservationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateReservationServlet</servlet-name>
        <url-pattern>/UpdateReservationServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DisplayReservationsServlet</servlet-name>
        <servlet-class>servlet.DisplayReservationsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DisplayReservationsServlet</servlet-name>
        <url-pattern>/DisplayReservationsServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ReportCriteriaServlet</servlet-name>
        <servlet-class>servlet.ReportCriteriaServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReportCriteriaServlet</servlet-name>
        <url-pattern>/ReportCriteriaServlet</url-pattern>
    </servlet-mapping>

    <servlet>
    <servlet-name>ReportServlet</servlet-name>
    <servlet-class>servlet.ReportServlet</servlet-class>
</servlet>

<servlet-mapping>
    <servlet-name>ReportServlet</servlet-name>
    <url-pattern>/ReportServlet</url-pattern>
</servlet-mapping>


    <welcome-file-list>
        <welcome-file>reservationdisplay.jsp</welcome-file> <!-- Recommended -->
    </welcome-file-list>
    
    <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
</welcome-file-list>

</web-app>
